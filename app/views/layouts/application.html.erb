<!DOCTYPE html>
<html>
<head>
  <title>AmericanTelecomWest</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'shared/top_nav' %>
  
<div class="main-container">

  <% if flash[:notice] %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
    <p class="alert alert-warning"><%= alert %></p>
    <% end %>
    <% if flash[:error] %>
    <ul>
      <div class="alert alert-warning"><% flash[:error].each do |error| %>
        <li><%= error %></li>
        <% end %>
      </div>
    </ul>
    <% end %>

<%= yield %>
</div>
  <%= render 'shared/admin' %>
<div class="footer"></div>
</body>
</html>
